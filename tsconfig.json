{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",  // Consider "Bundler" for Vite integration
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,  // Enables strict mode (includes noImplicitAny, strictNullChecks, etc.)
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "ES2022"  // Added for modern Node.js compatibility
  },
  "ts-node": {
    "esm": true
  }
}
